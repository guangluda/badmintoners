<% layout('layouts/boilerplate') %>


<div id="cluster-map"></div>


    <h1>All Courts:</h1>
    <div>
        <a href="/courts/new">Add a New Court</a>
    </div>

        <% for (let court of courts){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (court.images.length){ %>
                            <img class="img-fluid" src="<%= court.images[0].url %>" alt="">
                        <% } else { %>
                            <img class="img-fluid" src="https://res.cloudinary.com/do2m8d7kl/image/upload/v1664647316/Badmintoner/beiomhfwqfmzg9hpgaso.jpg" alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= court.title %></h5>
                            <p class="card-text"><a href="<%= court.website %>"><%= court.website %></a> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= court.location %></small>
                            </p>
                            <a href="/courts/<%= court._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>

            </div>
        <% } %>

        <script>
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
            const courts = {features:<%- JSON.stringify(courts) %>};
          </script>

<script src="/javascripts/clusterMap.js"></script>